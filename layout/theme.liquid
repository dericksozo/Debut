<!DOCTYPE html>
<html lang="en" class="no-js">
<head>

  <meta charset="utf-8" />
  {% render 'structured-data' %}
  {% render 'social-meta-tags' %}
  <!-- Basic Page Needs
================================================== -->

  <title>
    {{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>
  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}
  <link rel="canonical" href="{{ canonical_url }}" />

  <!-- CSS
================================================== -->
  {%- assign main_font = settings.main_font -%}
  {%- assign nav_font = settings.nav_font -%}

  {{ 'stylesheet.css' | asset_url | stylesheet_tag }}
  {{ 'queries.css' | asset_url | stylesheet_tag }}

  <link rel="preload" as="font" href="{{ main_font | font_url }}" type="font/woff2" crossorigin>
  <link rel="preload" as="font" href="{{ nav_font | font_url }}" type="font/woff2" crossorigin>

  {% include 'css-variables' %}

  <!-- JS
================================================== -->

  {{ '//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js' | script_tag }}
  {{ 'eventemitter3.min.js' | asset_url | script_tag }}

  {{ 'theme.js' | asset_url | script_tag }}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  {% if settings.favicon %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png" />
  {% endif %}

  {% if template contains 'customers' %}
    {{ "shopify_common.js" | shopify_asset_url | script_tag }}
    {{ "customer_area.js"  | shopify_asset_url | script_tag }}
  {% endif %}
  {{ content_for_header }}
  <script type="text/javascript">
    new WOW().init();
  </script>
</head>
<body class="gridlock {% if template contains 'product' %}product{% elsif template contains 'collection' %}collection{% else %}{{ template | handleize }}{% endif %} js-slideout-toggle-wrapper">
  <div class="js-slideout-overlay site-overlay"></div>

  <aside class="slideout slideout__drawer-left" data-wau-slideout="mobile-navigation" id="slideout-mobile-navigation">
    {% section 'mobile-navigation' %}
  </aside>

  <main class="site-wrap" role="main">
    <div class="page-wrap">
      {% section 'header' %}
      {% if template contains 'collection' %}
        {% if collection.description contains '[banner]' %}
          {% capture banner %}{{ collection.handle }}.jpg{% endcapture %}
          {% capture alt %}{{ collection.title }}{% endcapture %}
          <div class="collection-banner">
            {% assign img_url = banner | file_img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}

            <img class="lazyload lazyload-fade"
              src="{{ banner | file_url }} "
              data-src="{{ img_url }}"
              data-sizes="auto"
              alt="{{ alt }}">
          </div>
        {% endif %}
      {% endif %}

      <div class="content-wrapper">
        {% if template == 'index' or template contains 'blog' or template contains 'list-collections' or template.suffix contains 'custom' %}
          {{ content_for_layout }}
        {% else %}
          <div id="content" class="row">
            {% if template != 'index' %}
              {% if settings.breadcrumb %}
                {% render 'breadcrumb' %}
              {% endif %}
            {% endif %}
            {{ content_for_layout }}
          </div>
        {% endif %}
      </div>
    </div>
    {% section 'footer' %}
    {% if settings.popup %}
      {% render 'popup' %}
    {% endif %}
  </main>

  <a href="#" class="scrollup"><i class="fa fa-angle-up fa-2x" aria-hidden="true"></i></a>

  <div class="fancybox-wrapper"></div>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=127142210767229";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

  {% if settings.ajax_cart_method != 'page' %}
    {% render 'ajax-cart-template' %}
    <script>
    jQuery(function($) {
      ajaxifyShopify.init({
        method: '{{ settings.ajax_cart_method }}',
        wrapperClass: 'page-wrap',
        formSelector: '#AddToCartForm',
        addToCartSelector: '#addToCart',
        cartCountSelector: '.item_count',
        toggleCartButton: '.my-cart-link',
        useCartTemplate: false,
        btnClass: 'btn',
        moneyFormat: {{ shop.money_format | json }},
        disableAjaxCart: false,
        enableQtySelectors: true
      });
    });
    </script>
  {% endif %}

  <script>
    window.lazySizesConfig = window.lazySizesConfig || {};
    window.lazySizesConfig.minSize = 360;
  </script>

  <!-- Responsive Images -->
  {{ 'ls.rias.min.js' | asset_url | script_tag }}
  {{ 'ls.bgset.min.js' | asset_url | script_tag }}
  {{ 'lazysizes.min.js' | asset_url | script_tag }}

  <script>
    document.documentElement.className =
       document.documentElement.className.replace("no-js","js");
  </script>

 <!-- Fancybox JS -->
 {{ 'jquery.fancybox.js' | asset_url | script_tag }}
</body>
</html>
