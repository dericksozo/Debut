{% if section.settings.show_sku %}<span class="variant-sku">{{ product.variants.first.sku }}</span>{% endif %}

  {% capture 'money-format' %}{{ shop.money_format }}{% endcapture %}
  {% capture 'product-id' %}{{ product.id }}{% endcapture %}
  {% capture 'this-product' %}{{ product | json | escape }}{% endcapture %}
  {% form 'product', product, data-money-format:money-format, data-product-id:product-id, data-product:this-product, class: "prod-form product_form", id: "AddToCartForm" %}

  {% if product.options.size > 1 %}
  <div class="select">
    <select id="product-select-{{ product.id }}" name='id'>
      {% for variant in product.variants %}
      <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}" data-sku="{{ variant.sku }}">{{ variant.title }} - {{ variant.price | money }}</option>
      {% endfor %}
    </select>
  </div>
  {% unless section.settings.product_variants == 'dropdowns' %}
    {% for option in product.options %}
    {% include 'swatch' with option %}
    {% endfor %}
  {% endunless %}
  {% elsif product.options.size == 1 and product.variants.size > 1 %}
  <div class="select">
    <label>{{ product.options[0] }}</label>
    <select id="product-select-{{ product.id }}" name='id'>
      {% for variant in product.variants %}
      <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}" data-sku="{{ variant.sku }}">{{ variant.title }} - {{ variant.price | money }}</option>
      {% endfor %}
    </select>
  </div>
  {% unless section.settings.product_variants == 'dropdowns' %}
    {% for option in product.options %}
    {% include 'swatch' with option %}
    {% endfor %}
  {% endunless %}
  {% else %}
  <div class="what-is-it">
    {% if product.options.first != 'Title' %}
    <label>{{ product.options.first }}:</label>{% for variant in product.variants %}<span class="it-is">{{ variant.option1 | escape }}</span>{% endfor %}
    {% endif %}
  </div>
  <div class="product_variants"></div><!-- product variants -->
  <input  type="hidden" id="{{ variant.id }}" data-sku="{{ variant.sku }}" name="id" value="{{ product.variants[0].id }}" />
  {% endif %}

  {% if product.available %}
  <div class="product-add">
    {% if section.settings.product_quantity %}
    <div class="qty-selection">
    <h5>{{ 'products.product.quantity' | t }}</h5>
    <a class="down" field="quantity">-</a>
    <input min="1" type="text" name="quantity" class="quantity" value="1" />
    <a class="up" field="quantity">+</a>
    </div>
    {% endif %}
    <input type="submit" name="button" class="add{% if section.settings.show_payment_button %} secondary-button{% endif %}" id="addToCart" value="{{ 'products.product.add_to_cart' | t }}" />
  </div>
  {% if section.settings.show_payment_button %}
  {{ form | payment_button }}
  {% endif %}
  {% endif %}

{% endform %}


{% if product.variants.size > 1 or product.options.size > 1 %}
<script type="text/javascript">
  $(function() {
    $product = $('#product-' + {{ product.id }});
    new Shopify.OptionSelectors("product-select-{{ product.id }}", { product: {{ product | json }}, onVariantSelected:
     selectCallback, enableHistoryState: true });
  });

  $(document).on('shopify:section:load', function(event) {
    new Shopify.OptionSelectors("product-select-{{ product.id }}", { product: {{ product | json }}, onVariantSelected:
    selectCallback, enableHistoryState: true });
    {% unless section.settings.product_variants == 'dropdowns' %}
    jQuery('.swatch :radio').change(function() {
      var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
      var optionValue = jQuery(this).val();
      jQuery(this)
      .closest('form')
      .find('.single-option-selector')
      .eq(optionIndex)
      .val(optionValue)
      .trigger('change');
    });
    {% endunless %}
  });

</script>
{% endif %}
